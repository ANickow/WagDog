@model WagDog.Models.LoginViewModel

<div id="LoginModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <span id="closeLog" class="close">New Member?</span>
            <h2>You're a Good Dog!</h2>
        </div>
        <div class="modal-body">
            <br/>
                <form asp-controller="Dog" asp-action="" method="post">
                    <div class="flex-space-around">
                         <label class="logreg-label" asp-for="Email"></label>
                        <input class="logreg-input" asp-for="Email">
                        <label class="logreg-label" asp-for="Password"></label>
                        <input class="logreg-input" asp-for="Password">  
                    </div>   
            <br/>     
            <button type="submit">Login</button> 
            </form>
        </div>
    </div>
</div>